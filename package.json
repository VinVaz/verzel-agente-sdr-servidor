{
  "name": "agente-sdr-servidor",
  "version": "0.3.0",
  "description": "Server for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "dev": "concurrently -k -n \"TSC,NODE\" -c \"yellow,cyan\" \"tsc --watch --preserveWatchOutput\" \"nodemon -q --watch build --delay 500ms build/index.js\"",
    "dev:pretty": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --pretty src/index.ts",
    "build": "npm run clean && npm run lint:fix && tsc",
    "clean": "rimraf build",
    "lint": "eslint . --ext .ts,.json",
    "lint:fix": "eslint --fix . --ext .ts,.json",
    "format": "npm run lint:fix && prettier --write \"src/**/*.ts\"",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose",
    "test": "cross-env NODE_ENV=test npm run migrate && cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --maxWorkers=1 --verbose",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "http-terminator": "^3.2.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "objection": "^3.1.4",
    "pg": "^8.11.3",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "chalk": "^5.6.2",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^48.2.2",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^0.25.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  },
  "nodemonConfig": {
    "ignore": [
      "*.log",
      "*.json"
    ]
  }
}
